<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<field 
		formid="fname" 
		label="First Name" 
		mandatory="true" 
		max-length="50" 
		type="string" />

	<field 
		formid="lname" 
		label="Last Name" 
		mandatory="true" 
		max-length="50" 
		type="string" />

	<field
		formid="email" 
		label="E-mail" 
		mandatory="true" 
		max-length="50" 
		regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
		type="string" />
</form>
